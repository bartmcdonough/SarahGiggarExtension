{
  "manifest_version": 3,
  "default_locale": "en",

  "name": "Save to Sarah's Wardrobe",
  "description": "Save the current page as a wardrobe item in the Sarah Giggar portal.",
  "version": "1.0.0",

  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/toolbar-icon.svg"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus"
  ],

  "commands": {
    "quickAdd": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Save current tab to Sarahâ€™s wardrobe"
    }
  },

  "host_permissions": [
    "https://sarahgiggar.com/*"
  ]
  
  "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://*/*", "http://*/*"],
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
}
